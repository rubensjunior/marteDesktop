    "icon": "assets/appIcon.ico",
    "publish": [
      {
        "provider": "github",
        "owner": "rubensjunior",
        "repo": "marteDesktop",
        "releaseType": "release"
      }
    ]
  },
  "mac": {
    "identity": "Developer ID Application: Seu Nome (TEAMID)",
    "category": "public.app-category.productivity",
    "target": "dmg",
    "bundleVersion": "1.0.0",
    "bundleShortVersion": "1.0.0"
  }
}